<html>
    <body>
        <script>
            var numerodia = "";
            numerodia = prompt("Digite el número de la tabla de multiplicar que desea (1-10):");
            var auxNumero = parseInt(numerodia);

            if (auxNumero < 1) {
                console.log("Por favor, ingrese un número mayor o igual a 1.");
            } else if (auxNumero > 10) {
                console.log("Por favor, ingrese un número menor o igual a 10.");
            } else {
                var i = 1;

                while (i <= 10) { 
                    var resultado = auxNumero * i; 
                    console.log(auxNumero + " x " + i + " = " + resultado); 
                    i++; 
                }
            }
        </script>
    </body>
</html>

